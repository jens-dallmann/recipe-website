{
  "builders": [
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://192.168.178.28/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "4s",
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",     
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "91bd1cfba65417bfa04567e4f64b5c55",
      "iso_checksum_type": "md5",
      "iso_url": "file:///home/deception/Downloads/ubuntu-14.10-server-amd64.iso",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ],
 	[
	  "modifyvm", "{{.Name}}", 
	  "--natdnshostresolver1", "on"
	],
        [
	  "modifyvm", "{{.Name}}",
	  "--natdnsproxy1", "on"
	],
	[
	  "modifyvm", "{{.Name}}",
	  "--natpf1", "guestssh,tcp,,2222,192.168.178.37,22"
        ],
	[
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "apache,tcp,,80,,80"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "jenkins,tcp,,8080,,8080"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "scripts/root_setup.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/setup.sh"
      ],
      "type": "shell"
    }
  ]
}
